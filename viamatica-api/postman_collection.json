{
  "info": {
    "name": "Viamatica API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Listar películas",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/peliculas"
      }
    },
    {
      "name": "Obtener película",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/peliculas/1"
      }
    },
    {
      "name": "Crear película",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Matrix\",\n  \"duracion\": 136\n}"
        },
        "url": "{{baseUrl}}/api/peliculas"
      }
    },
    {
      "name": "Actualizar película",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Matrix Reloaded\",\n  \"duracion\": 138\n}"
        },
        "url": "{{baseUrl}}/api/peliculas/1"
      }
    },
    {
      "name": "Eliminar película",
      "request": {
        "method": "DELETE",
        "url": "{{baseUrl}}/api/peliculas/1"
      }
    },
    {
      "name": "Buscar película por nombre",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/peliculas/buscar/nombre?nombre=Matrix"
      }
    },
    {
      "name": "Buscar película por fecha_publicacion",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/peliculas/buscar/fecha-publicacion?fecha_publicacion=2026-01-01"
      }
    },
    {
      "name": "Disponibilidad sala por nombre",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/salas/disponibilidad?nombre=Sala%201"
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8000" }
  ]
}
